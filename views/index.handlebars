<h1>Burgers!</h1>

<div class="burger-image"></div>


<div class="listOne">
  <h2>Burgers that are not eaten!</h2>
  <ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>


<div class="listTwo">
  <h2>burgers that are eaten!</h2>
  <ul class='listTwo'>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div class="below-list">
  <h2 style='float: clear:both;'>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
      <button type="submit">Add burger</button>
    </div>
</div>

</form>